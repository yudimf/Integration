<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.wbp.WbpDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/person_24px"/>

        <TextView
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/detail_wbp_name"
            android:text="Nama Lengkap WBP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Warga Binaan"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TableLayout
            android:paddingTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:shrinkColumns="1">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perkara"
                    android:paddingRight="80dp"
                    />

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:text=":" />
                <TextView
                    android:id="@+id/detail_wbp_perkara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pencurian" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pidana"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />
                <TextView
                    android:id="@+id/detail_wbp_pidana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Tahun 6 Bulan" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Penjamin"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />
                <TextView
                    android:id="@+id/detail_wbp_penjamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neneng Novia" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hubungan"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />
                <TextView
                    android:id="@+id/detail_wbp_hubungan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ibu Kandung" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Validasi"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />
                <TextView
                    android:id="@+id/detail_wbp_status_validasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum divalidasi" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Validasi"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />
                <TextView
                    android:id="@+id/detail_wbp_tanggal_validasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />
            </TableRow>
            <TableRow>
                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Bapas"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:paddingTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama PK"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />
                <TextView
                    android:id="@+id/detail_wbp_pk_bapas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Telepon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />
                <TextView
                    android:id="@+id/detail_wbp_telp_pk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asal Bapas"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />
                <TextView
                    android:id="@+id/detail_wbp_bapas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />
            </TableRow>
        </TableLayout>

        <TextView
            android:paddingTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Progres"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="4dp"
            android:layout_marginHorizontal="16dp"
            android:id="@+id/recycle_progres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>